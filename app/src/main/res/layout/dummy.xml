<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42.69998dip"
                android:background="#C9C9C9"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.0dip"
                android:gravity="center_horizontal"
                android:text="WORLDâ€™s Leading Ecommerce Platform"
                android:textColor="#000" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.699982dip"
                android:layout_marginTop="30dp"
                android:layout_marginRight="23.0dip"
                android:textColorHint="#000">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/envelope"
                    android:drawablePadding="10.0dip"
                    android:hint="E-mail Address"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingTop="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="18.0dip"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="14.699982sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.699982dip"
                android:layout_marginRight="23.0dip"
                android:textColorHint="#000">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/eye"
                    android:drawablePadding="10.0dip"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingTop="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="15.0dip"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="14.699982sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.299988dip"
                android:layout_marginRight="22.0dip"
                android:gravity="right"
                android:text="Forgot Password?"
                android:textColor="#89000000"
                android:textSize="12.699982sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="52.0dip"
                android:layout_marginRight="16.0dip"
                android:background="@drawable/button_rect"
                android:gravity="center_horizontal"
                android:paddingTop="16.0dip"
                android:paddingBottom="16.0dip"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="16.699982sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32.0dip"
                android:text="Or Login with social media"
                android:textColor="#000"
                android:textSize="11.299988sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="17.299988dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="13.0dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/gmail_rect"
                    android:gravity="center"
                    android:paddingTop="13.5dip"
                    android:paddingBottom="13.5dip"
                    android:text="Gmail"
                    android:textColor="#FFFFFF"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.5dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/blue_rect"
                    android:gravity="center"
                    android:paddingTop="13.5dip"
                    android:paddingBottom="13.5dip"
                    android:text="Facebook"
                    android:textColor="#FFFFFF"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>